<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bottom_text_press"
        android:elevation="5dp"
        android:minHeight="?attr/actionBarSize"
        >

    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="match_parent"
                android:layout_height="318dp" />

            <TextView
                android:background="@color/divider_line"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="match_parent"
                android:textColor="@color/common_textcolor_black"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_product_sub_title"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:textColor="@color/btn_red"
                android:textSize="18sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tv_go_home"
            android:layout_width="80dp"
            android:text="首页"
            android:drawablePadding="2dp"
            android:textSize="12sp"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_product_home"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_add_shop_bus"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="加入购物车"
            android:background="@color/btn_red"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>