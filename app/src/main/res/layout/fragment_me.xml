<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:layout_height="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_marginTop="20dp"
            android:paddingRight="15dp"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_img"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:src="@drawable/plus"
                app:civ_border_color="#00FFFFFF"
                app:civ_border_width="1dp"/>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:text="null"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_shop_bus_bg"
            android:layout_height="100dp">

            <LinearLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:layout_height="40dp">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="我的订单"
                    android:textColor="@color/common_textcolor_black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="全部订单"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:background="@color/divider_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_wait_pay"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/wait_pay"
                    android:text="待付款"
                    android:textSize="12sp"
                    android:drawablePadding="3dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_wait_fh"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/wait_fh"
                    android:text="待发货"
                    android:textSize="12sp"
                    android:drawablePadding="3dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_wait_sh"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/wait_sh"
                    android:text="待收货"
                    android:textSize="12sp"
                    android:drawablePadding="3dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_yi_fh"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_ysh"
                    android:text="已收货"
                    android:textSize="12sp"
                    android:drawablePadding="3dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_service"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_service"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_shop_bus_bg"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_height="40dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="其他功能"
                android:textColor="@color/common_textcolor_black"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <TextView
            android:background="@color/divider_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_address"
                android:text="地址"
                android:textSize="12sp"
                android:drawablePadding="3dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_tc"
                android:text="退出"
                android:textSize="12sp"
                android:drawablePadding="3dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableTop="@mipmap/wait_pay"
                android:text="修改密码"
                android:textSize="12sp"
                android:drawablePadding="3dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableTop="@mipmap/wait_pay"
                android:text="关于我们"
                android:textSize="12sp"
                android:drawablePadding="3dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>