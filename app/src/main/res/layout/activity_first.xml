<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="6">










            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/toushuBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/motorbike" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电动车出租"/>
            </FrameLayout>
            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/findlostBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/checkbox" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代领快递"/>
            </FrameLayout>

            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/quanyizhongxinBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/dnwx" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电脑维修"/>
            </FrameLayout>
            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/shiwudatingBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/xxscz" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选修书出租"/>
            </FrameLayout>
            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/tiaozaoshichangBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/cdcz" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="场地出租"/>
            </FrameLayout>
            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/jiangzuoBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ztcy" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="组团出游"/>
            </FrameLayout>
            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/CETBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/bcfw" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包车服务"/>
            </FrameLayout>
            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/jianzhiBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/eswpjy" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二手物品交易"/>
            </FrameLayout>
            <FrameLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/xiaoliBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/xlcx" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_xiaoli"/>
            </FrameLayout>
            <FrameLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/dianfeiBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/dfcz" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_dianfeichongzhi"/>
            </FrameLayout>
            <FrameLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <ImageButton
                    android:id="@+id/biaobaiqiangBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/bbq" />
                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_biaobaiqiang"/>
            </FrameLayout>
            <FrameLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/homeBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/background_light"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/xyfw" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_xiaoyuanfuwu"/>
            </FrameLayout>

        </GridLayout>
    </ScrollView>

</LinearLayout>